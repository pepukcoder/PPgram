<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:m="clr-namespace:PPgram.MVVM.Models.MessageContent;assembly=PPgram"
             x:Class="PPgram.Controls.MessageContent.MediaContentControl"
			 x:DataType="m:MediaContentModel">
	<StackPanel Orientation="Vertical" Margin="0,0,10,0">
		<ListBox Margin="0,0,0,3" Padding="0" Background="Transparent" ItemsSource="{Binding MediaFiles}" BorderThickness="0" ItemContainerTheme="{StaticResource Media}">
			<ListBox.ItemsPanel>
				<ItemsPanelTemplate>
					<WrapPanel/>
				</ItemsPanelTemplate>
			</ListBox.ItemsPanel>
		</ListBox>
		<TextBlock Text="{Binding Text}"/>
	</StackPanel>
</UserControl>
