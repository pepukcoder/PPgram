<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:local="using:PPgram"
             x:Class="PPgram.App"
             RequestedThemeVariant="Dark">     
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
		<SimpleTheme/>
		<materialIcons:MaterialIconStyles/>
	</Application.Styles>

	<Application.Resources>
		<ResourceDictionary>
			<FontFamily x:Key="Montserrat">/Fonts#Montserrat</FontFamily>
			<FontFamily x:Key="Cascadia">/Fonts#Cascadia Mono</FontFamily>
			<ResourceDictionary.MergedDictionaries>
				<ResourceInclude Source="/Styles/ThemeColors.axaml"/>
				<ResourceInclude Source="/Styles/Button.axaml"/>
				<ResourceInclude Source="/Styles/Message.axaml"/>
				<ResourceInclude Source="/Styles/Chat.axaml"/>
				<ResourceInclude Source="/Styles/TextBoxFlyout.axaml"/>
				<ResourceInclude Source="/Styles/MediaFile.axaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>
</Application>