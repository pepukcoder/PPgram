<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:m="clr-namespace:PPgram.MVVM.Models.File;assembly=PPgram"
					xmlns:helpers="clr-namespace:PPgram.Helpers;assembly=PPgram"
					xmlns:icons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia">
	<ControlTheme x:Key="Media" TargetType="ListBoxItem" x:DataType="m:MediaFileModel">
		<ControlTheme.Resources>
			<helpers:SizeConverter x:Key="SConvert"/>
		</ControlTheme.Resources>
		<Setter Property="Template">
			<ControlTemplate>
				<Border CornerRadius="5" ClipToBounds="True" Margin="2">
					<Panel>
						<Image Source="{Binding Preview}"/>
						<Border CornerRadius="10" ClipToBounds="True" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5">
							<Panel>
								<Rectangle Fill="{StaticResource Surface}" Opacity="0.5"/>
								<TextBlock Text="{Binding Size, Converter={StaticResource SConvert}}" Margin="5,3"/>
							</Panel>
						</Border>
					</Panel>
				</Border>
			</ControlTemplate>
		</Setter>
	</ControlTheme>
</ResourceDictionary>