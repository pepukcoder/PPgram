<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Design.PreviewWith>
		<Border Padding="10" Background="#1e2021">
			<StackPanel Orientation="Vertical">
				<StackPanel Orientation="Horizontal" Margin="0,5">
					<Border Background="{StaticResource BgColor1}" Padding="10,10,40,40" CornerRadius="10" Margin="5,0">
						<TextBlock Text="UserColor1" FontWeight="Medium" Foreground="{StaticResource UserColor1}"/>
					</Border>
				</StackPanel>
			</StackPanel>
		</Border>
	</Design.PreviewWith>

	<SolidColorBrush x:Key="BgColor1">#231e2a</SolidColorBrush>
	<SolidColorBrush x:Key="UserColor1">#a47fdb</SolidColorBrush>
</ResourceDictionary>
